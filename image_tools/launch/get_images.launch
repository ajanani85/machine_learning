<?xml version="1.0"?>
<launch>
	<arg name="keyword" default="forklift"/>
	<arg name="number_of_images" default="100"/>
	<arg name="output_directory" default="/home/ubuntu/get_images_download/"/>
	<arg name="chrome_driver" default="/home/ubuntu/catkin_ws/src/machine_learning/image_tools/chromedriver"/>
	<arg name="resize_cols" default="256"/>
	<arg name="resize_rows" default="256"/>
	
	<!--
		color_space select:
		0 -> rgb
		1 -> gray
	-->
	<arg name="color_space" default="1"/>
	
	<node pkg="image_tools" type="get_images.py" name="get_images" output="screen">
		<param name="keyword" value="$(arg keyword)"/>
		<param name="number_of_images" value="$(arg number_of_images)"/>
		<param name="output_directory" value="$(arg output_directory)"/>
		<param name="chrome_driver" value="$(arg chrome_driver)/chromedriver"/>
		<param name="resize_rows" value="$(arg resize_rows)"/>
		<param name="resize_cols" value="$(arg resize_cols)"/>
		<param name="color_space" value="$(arg color_space)"/>
	</node>
</launch>
